# Environment Configuration for Mobile POC Tester
# Copy this file to .env and modify the values as needed

# Basic Configuration
DEBUG=false
SECRET_KEY=your-secret-key-here-change-this
LOG_LEVEL=INFO

# Network Configuration
WEB_PORT=5000

# Android Emulator Configuration
MAX_MEMORY=8192

# File Upload Settings
MAX_FILE_SIZE=100  # Maximum file size in MB
UPLOAD_RETENTION_HOURS=1
SCREENSHOT_RETENTION_HOURS=24

# Queue Management
MAX_QUEUE_SIZE=50
QUEUE_CLEANUP_INTERVAL=3600  # Cleanup interval in seconds
QUEUE_RETENTION_HOURS=1

# Timeout Settings
ADB_TIMEOUT=30
PROCESS_TIMEOUT=30
APK_INSTALL_TIMEOUT=60

# Proof of Work
POW_DIFFICULTY=10000

# ADB Settings
ADB_HOST=device
ADB_PORT=5037 